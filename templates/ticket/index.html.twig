{% extends 'base.html.twig' %}

{% block title %}Hello TicketController!{% endblock %}

{% block body %}



    <h2>Liste des tickets</h2>
    

    <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Objet</th>
      <th>Message</th>
      <th>Etat</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {% for ticket in tickets %}
    <tr>
      <td>{{ ticket.Objet }}</td>
      <td>{{ ticket.Message }}</td>
      <td>{{ ticket.etat }}</td>
      <td> 
        <a class="btn btn-error" href="{{ path('ticket_supprimer', {'id': ticket.id}) }}"><i class="icon icon-delete"></i></a>
        <a class="btn" href="{{ path('ticket_modifier', {'id': ticket.id}) }}"><i class="icon icon-edit"></i></a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
